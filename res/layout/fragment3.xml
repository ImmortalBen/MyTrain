<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_button_seletor"
        >

        <Button
            android:id="@+id/bt_changepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"         
            android:drawableLeft="@drawable/img_pwd"
            android:background="@drawable/white_button_seletor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="修改密码" />

    </LinearLayout>
    
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:background="@drawable/white_button_seletor"
        >
        <Button android:layout_width="match_parent"
            android:id="@+id/bt_information"
           android:layout_height="wrap_content"
           android:drawableLeft="@drawable/img_info"
           android:background="@drawable/white_button_seletor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:text="查看基本信息"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
           android:background="@drawable/white_button_seletor"
        >

        <Button android:layout_width="match_parent"
           android:id="@+id/bt_changeInfo"
           android:layout_height="wrap_content"
android:background="@drawable/white_button_seletor"
           android:drawableLeft="@drawable/img_changeinfo"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
           android:text="修改基本信息"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:background="@drawable/white_button_seletor"
        >

        <Button android:layout_width="match_parent"
            android:id="@+id/bt_mycontactor"
           android:layout_height="wrap_content"
android:background="@drawable/white_button_seletor"
           android:text="我的联系人"
          android:drawableLeft="@drawable/img_myconnect"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:background="@drawable/white_button_seletor"
       >

        <Button android:layout_width="match_parent"
            android:id="@+id/bt_recharge"
           android:layout_height="wrap_content"
         android:background="@drawable/white_button_seletor"
           android:text="充值"
          android:drawableLeft="@drawable/img_dia"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         android:background="@drawable/white_button_seletor"
        >

        <Button android:layout_width="match_parent"
            android:id="@+id/bt_about"
           android:layout_height="wrap_content"
           android:text="关于"
           android:background="@drawable/white_button_seletor"
           android:drawableLeft="@drawable/img_myinfo"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:background="@drawable/indianred_button_seletor"
       >

        <Button android:layout_width="match_parent"
            android:id="@+id/bt_logout"
           android:layout_height="wrap_content"     
           android:text="退出登录"
            android:background="@drawable/indianred_button_seletor"
          android:drawableLeft="@drawable/img_logout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
        
    

</LinearLayout>
</ScrollView>